# EditorConfig helps developers define and maintain consistent coding
# styles between different editors and IDEs. see: http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace_on_save = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[makefile]
indent_style = tab

[*.md]
indent_style = space
trim_trailing_whitespace = false

# YAML Files
[*.{yml,yaml}]
indent_size = 2
